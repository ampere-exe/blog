---
import BlogCard from '@/components/BlogCard.astro'
import Container from '@/components/Container.astro'
import Link from '@/components/Link.astro'
import AvatarComponent from '@/components/ui/avatar'
import { buttonVariants } from '@/components/ui/button'
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from '@/components/ui/card'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { cn } from '@/lib/utils'
import { getCollection } from 'astro:content'

// Fetch both blog and projects collections
const blogPosts = await getCollection('blog')
const projectPosts = await getCollection('projects')

// Combine the posts arrays and sort them by date (newest first)
const posts = [...blogPosts, ...projectPosts]
  .filter((post: any) => !post.data.draft)
  .sort((a: any, b: any) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE)

// If you have a combined route for all posts, set it here.
// Otherwise, you might need to decide which one to link to.
const baseUrl = '/blog'
---

<Layout title="Home" description={SITE.DESCRIPTION}>
  <Container class="flex flex-col gap-y-6">
    <section>
      <Card>
        <CardHeader>
          <CardTitle className="text-3xl">About Me</CardTitle>
          <AvatarComponent
            client:load
            src="/Chakarov.png"
            alt="Avatar"
            className={cn('size-32 rounded-md')}
          />
          <CardDescription>
            <span class="text-xs">
              Source: Ironmind Highlight of Weightlifter Ivan Chakarov at the 1993 Worlds.
            </span>
          </CardDescription>
        </CardHeader>
        <CardContent>
          <p class="mb-2 text-pretty text-sm">
            Hey, my name is Zuhair Emaz and I'm an aspiring engineer from
            Canada. I also go by my alias ampere_exe.
          </p>
          <p class="mb-2 text-pretty text-sm">
            Outside of that, i'm a strength athlete who likes reading, playing video games (sometimes), 
            programming, writing, and cooking.
          </p>
          <p class="mb-2 text-pretty text-sm">This blog is mainly for me to document my own thoughts and ideas. Feel free to linger around.</p>
          <span class="text-xs">
            Note: This blog was created with the help of <span><a class="underline" href="https://github.com/jktrn/astro-erudite">jktrn</a></span>
            who designed this open source template. Go check him out if you can.
          </span>
        </CardContent>
      </Card>
    </section>
    <section class="flex flex-col gap-y-4">
      <h2 class="text-2xl font-bold">Latest posts</h2>
      <ul class="not-prose flex flex-col gap-y-4">
        {
          posts.map((post: any) => (
            <li>
              <BlogCard entry={post} />
            </li>
          ))
        }
      </ul>
      <div class="flex justify-center">
        <Link
          href={baseUrl}
          class={buttonVariants({ variant: 'ghost' }) + ' group'}
        >
          See all posts <span
            class="ml-1.5 transition-transform group-hover:translate-x-1"
            >&rarr;</span
          >
        </Link>
      </div>
    </section>
  </Container>
</Layout>
